page {
    background-color: #F7F7F7;
  }
.block0{
  background-color: red;
  border-radius: 10px;
  margin-top: 10px;
  margin-left: 15px;
  margin-right: 15px;
  width: auto;
  height: 70px;
}
.block1{
    background-color: #FFFFFF;
    border-radius: 10px;
    margin-top: 10px;
    margin-left: 15px;
    margin-right: 15px;
    width: auto;
    height: 150px;
  }
  .leftblock{
    background-color: orange;
    border-radius: 10px;
    margin-top: 10px;
    height:55px;
    width: 45%;
    margin-left: 3%;
    display: inline-block;
    flex-direction: column;
  }
  .rightblock{
    background-color: orange;
    border-radius: 10px;
    margin-top: 10px;
    height:55px;
    width: 45%;
    margin-left: 4%;
    display: inline-block;
    flex-direction: column;
  }
  .strip{
    background-color: #FFFFFF;
    margin-top: 10px;
    height:30px;
    width:70%;
    margin-left: 4%;
    display: inline-block;
    flex-direction: column;
  }
  .rememberbutton{
    background-color: #21CCA0;
    margin-top: 10px;
    border-radius: 10px;
    height:27px;
    width: 15%;
    display: inline-block;
    flex-direction: column;
    /* 文本样式 */
    text-align: center;
  }
  .data{
    background-color: #FFFFFF;
    margin-top: 22px;
    margin-left: 4%;
    width: 40%;
    height: 83px;
    display: inline-block;
    flex-direction: row;
    vertical-align:top;
    font-size: 20px;
  }
  .img{
    background-color: #FFFFFF;
    margin-top: 5px;
    margin-left: 4%;
    width: 45%;
    height: 100px;
    display: inline-block;
    flex-direction: row;
  }