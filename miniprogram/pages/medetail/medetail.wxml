<van-cell-group title="请输入下列身体数据">

    <van-field
    label="身高"
    placeholder="请输入身高"
    bind:change="onChangeheight"
  />
  <van-field
    label="体重"
    placeholder="请输入体重"
    bind:change="onChangeweight"
  />
  <van-field
    label="目标体重"
    placeholder="请输入目标体重"
    bind:change="onChangefweight"
  />
  <van-field
    label="年龄"
    placeholder="请输入年龄"
    bind:change="onChangeold"
  />
  <van-field
    label="BMI"
    placeholder="请输入BMI"
    bind:change="onChangeBMI"
  />
  <van-cell
      title="性别"
      value-class="value-class"
    >
    <radio-group name="gender" bindchange="gender">
      <radio value="男" class="radio-text">男</radio>
      <radio value="女" class="radio-text">女</radio>
    </radio-group>
    </van-cell>
</van-cell-group>
<van-button round type="info" style="margin-left: 38%;" bindtap="save" >保存</van-button>